{
  "__README__": "After fetching, rename this file as appsettings.Development.json and adjust values for your local environment.",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Jwt": {
    "Audience": "browser",
    "AudienceIntegrations": "integrations"
  },

  "Security": {
    "EnableCookieAuth": true,
    "EnableCsrfValidation": false,
    "FeOrigins": [
      "https://fe.local.test:5173",
      "https://fe.local.test:4173"
    ]
  },

  "Cookies": {
    "Domain": ".local.test",
    "AuthCookieName": ".InvoiceAuth",
    "XsrfCookieName": "XSRF-TOKEN-v2",
    "XsrfHeaderName": "X-CSRF-TOKEN",
    "Secure": true,
    "SameSite": "None"
  },

  "Kestrel": {
    "Endpoints": {
      "HttpsApi": {
        "Url": "https://api.local.test:5001",
        "Certificate": {
          "Path": "certs/api.local.test.p12",
          "Password": "<PUT_YOUR_CERT_PASSWORD_HERE>"
        }
      }
    }
  }
}